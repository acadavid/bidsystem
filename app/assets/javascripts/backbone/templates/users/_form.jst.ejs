<% if (typeof(errors) != "undefined") { %>
  <div class="alert alert-error"><%= errors %></div>
<% } %>
<label for="name">Name</label>
<input type="text" name="name" id="name" value="<%= name %>" placeholder="John Doe" class="input-medium" required>
<label for="email">Email</label>
<input type="text" name="email" id="email" value="<%= email %>" placeholder="john@doe.com" class="input-medium">
<div class="input-prepend">
  <span class="add-on">$</span>
  <input type="text" name="budget" id="budget" value="<%= budget %>" placeholder="10" class="input-mini" required>
</div>
<button type="submit" class="btn btn-primary">Save</button>
